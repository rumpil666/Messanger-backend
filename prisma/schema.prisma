generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  email     String @unique
  firstName String @map("first_name")
  lastName  String @map("last_name")
  password  String

  messages   Message[]
  recipients MessageRecipient[]
  groups     UserGroup[]

  @@map("user")
}

model Group {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  name String

  users      UserGroup[]
  recipients MessageRecipient[]

  @@map("group")
}

model UserGroup {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  group   Group  @relation(fields: [groupId], references: [id])
  groupId String @map("group_id")

  @@map("user_group")
}

model Message {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user      User   @relation(fields: [creatorId], references: [id])
  creatorId String @map("creator_id")

  messageBody String   @map("message_body")
  fileList    String[] @map("file_list")

  recipients MessageRecipient[]

  @@map("message")
}

model MessageRecipient {
  id String @id @default(cuid())

  user        User   @relation(fields: [recipientId], references: [id])
  recipientId String @map("recipient_id")

  group            Group  @relation(fields: [recipientGroupId], references: [id])
  recipientGroupId String @map("recipient_group_id")

  message   Message @relation(fields: [messageId], references: [id])
  messageId String  @map("message_id")

  @@map("message_recipient")
}
